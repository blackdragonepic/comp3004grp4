<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group4.myapplication.gametracker"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="back"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/lifetotalincrease"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="37dp"
        android:text="+"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/lifetotal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lifetotal"
        android:layout_marginRight="37dp" />

    <Button
        android:id="@+id/lifetotaldecrease"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="-"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lifetotalincrease"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/lifetotalincrease"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lifetotalincrease" />

    <TextView
        android:id="@+id/lifetotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Total"
        android:textSize="40dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintRight_toLeftOf="@+id/lifetotalincrease"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/backbutton"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/lifetotalnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lifetotal"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/lifetotal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lifetotal" />

    <TextView
        android:id="@+id/poisoncounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poison"
        android:textSize="40dp"
        app:layout_constraintRight_toLeftOf="@+id/poisonincrease"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="226dp"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/backbutton"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/poisonnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/poisoncounter"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/poisoncounter"
        android:layout_marginLeft="45dp" />

    <Button
        android:id="@+id/poisonincrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteX="259dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/poisoncounter"
        app:layout_constraintBottom_toBottomOf="@+id/poisoncounter"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/poisondecrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/poisonincrease"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/poisonincrease"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/poisonincrease" />
</android.support.constraint.ConstraintLayout>
