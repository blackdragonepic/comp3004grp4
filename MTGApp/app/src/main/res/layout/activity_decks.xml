<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jace_beleren_640"
    tools:context="com.bsdomain.mtgapp.Decks">

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="225dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="254dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="260dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp">

        <ListView
            android:id="@+id/Decklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="Decklist"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/deckBTN"
        android:layout_alignStart="@+id/deckBTN" />

    <Button
        android:id="@+id/deckBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create deck"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deckBTN"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:text="Back" />

</RelativeLayout>